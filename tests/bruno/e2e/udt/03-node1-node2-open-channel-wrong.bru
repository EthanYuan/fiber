meta {
  name: Node1 open a channel to Node2
  type: http
  seq: 3
}

post {
  url: {{NODE1_RPC_URL}}/ckb
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  Accept: application/json
}

body:json {
  {
    "request": {
      "OpenChannel":
      [
        {
          "peer_id": "{{NODE2_PEERID}}",
          "funding_amount": 61000000000000,
          "funding_type_script": "0x55000000100000003000000031000000e1e354d6d643ad42724d40967e334984534e0367405c5ae42a9d7d63d77df41902200000004e58a837b1ac0a72adc56aa876dad176227a9c17c464ecd8e49451d72c79bc29"
        }
      ]
    }
  }
}

assert {
  res.status: eq 200
}

script:post-response {
  await new Promise(r => setTimeout(r, 1000));
  console.log("N1N2 response: ", res.body.channel_id);
  bru.setVar("N1N2_TEMP_CHANNEL_ID", res.body.channel_id);
}
