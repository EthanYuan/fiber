meta {
  name: Node3 open a channel to Node1
  type: http
  seq: 2
}

post {
  url: {{NODE3_RPC_URL}}
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  Accept: application/json
}

// open a channel with delay epoch 3.5 epochs = 14 hours
// 3.5 epochs is presented as 3(E) and 1(I)/2(L): (L << 40) | (I << 24) | E = 0x20001000003
// ref: https://github.com/nervosnetwork/rfcs/blob/master/rfcs/0017-tx-valid-since/e-i-l-encoding.png
body:json {
  {
    "id": "42",
    "jsonrpc": "2.0",
    "method": "open_channel",
    "params": [
      {
        "peer_id": "{{NODE1_PEERID}}",
        "funding_amount": "0xba43b7400",
        "commitment_delay_epoch": "0x30001000002"
      }
    ]
  }
}

assert {
  res.body.error: isUndefined
  res.body.result.temporary_channel_id: isDefined
}

script:post-response {
  await new Promise(r => setTimeout(r, 2000));
}
